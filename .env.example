# Automated Code Review System Configuration

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=4000

# Gerrit Configuration
GERRIT_HOST=your-gerrit-server.com
GERRIT_PORT=8080
GERRIT_USERNAME=your-gerrit-username
GERRIT_PASSWORD=your-gerrit-password
GERRIT_PROJECT=your-project-name

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=false
WEBHOOK_SECRET=your-webhook-secret-key

# Review Configuration
MIN_REVIEW_SCORE=7.0
AUTO_POST_REVIEW=true
REVIEW_TIMEOUT_SECONDS=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/code_review.log
